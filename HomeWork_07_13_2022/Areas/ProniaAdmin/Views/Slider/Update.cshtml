@model Slider
@{
    ViewData["Title"] = "Update";
}


<div class = "main-panel">
    <h1>Update Slider</h1>
    <div>
        <img src = "~/assets/images/website-images/@Model.Image"/>
    </div>
    <form class = "mt-3" method = "post" enctype = "multipart/form-data">
        <div>
            <label asp-for = "Photo">Image:</label><br />
            <input asp-for = "Photo" class = "form-control" />
            <span class = "text-danger" asp-validation-for = "Photo"></span>
        </div>
        <div>
            <label asp-for = "Title">Title:</label><br />
            <input asp-for = "Title" class = "form-control" />
            <span class = "text-danger" asp-validation-for = "Title"></span>
        </div>
        <div>
            <label asp-for = "Desc">Desc:</label><br />
            <input asp-for = "Desc" class = "form-control" />
            <span class = "text-danger" asp-validation-for = "Desc"></span>
        </div>
        <div>
            <label asp-for = "Discount">Discount:</label><br />
            <input asp-for = "Discount" class = "form-control" />
            <span class = "text-danger" asp-validation-for = "Discount"></span>
        </div>
        <div>
            <label asp-for = "ButtonUrl">Button:</label><br />
            <input asp-for = "ButtonUrl" class = "form-control" />
            <span class = "text-danger" asp-validation-for = "ButtonUrl"></span>
        </div>
        <div>
            <label asp-for = "Order">Order:</label><br />
            <input asp-for = "Order" class = "form-control" />
            <span class = "text-danger" asp-validation-for = "Order"></span>
        </div>
        <div class = "mt-2">
            <button class = "btn btn-success" type = "submit" style = "color : white">Create</button>
        </div>
    </form>
</div>