@model List<Slider>
@{
    ViewData["Title"] = "Index";
}

<div class = "main-panel">
	<div class = "content-wrapper">
		<div class = "row">
			<div class="col-lg-12 grid-margin stretch-card">
				<div class = "card">
					<div class = "card-body">
                        <div>
                            <a asp-area = "ProniaAdmin" asp-controller = "slider" asp-action = "create" class = "btn btn-success" style = "color:white">Create new Category</a>
                        </div>
						<div class="table-responsive pt-3">
                    <table class="table table-dark">
                      <thead>
                        <tr>
                          <th>
                            Images
                          </th>
                          <th>
                            Title
                          </th>
                          <th>
                            Article
                          </th>
                          <th>
                            Discount
                          </th>
                          <th>
                            Order
                          </th>
                          <th>
                            Settings
                          </th>
                        </tr>
                      </thead>
                      <tbody>
                        @foreach (Slider slider in Model)
                       {
                           <tr>
                          <td>
                            <img src = "~/assets/images/website-images//@slider.Image">
                          </td>
                          <td>
                            @slider.Title
                          </td>
                          <td>
                            @slider.Desc
                          </td>
                          <td>
                            @slider.Discount
                          </td>
                          <td>
                            @slider.Order
                          </td>
                          <td class = "d-flex">
                            <div>
                                <a class = "btn btn-warning" asp-area = "proniaadmin" asp-controller = "slider" asp-action = "update" asp-route-id = "@slider.Id"><i class = "mdi mdi-border-color"></i></a>
                            </div>
                            <div>
                                <a class = "btn btn-danger" asp-area = "proniaadmin" asp-controller = "slider" asp-action = "delete" asp-route-id = "@slider.Id"><i class = "mdi mdi-delete"></i></a>
                            </div>
                          </td>
                        </tr>
                       }
                      </tbody>
                    </table>
                  </div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>