@model Plant
@{
    ViewData["Title"] = "Update";
}

<div class = "main-panel">
    <h1>Update Plant</h1>
   <div class = "d-flex justify-content-around">
        <div>
        <p class = "text text-success">Main Images:</p>
        <div style = "position: relative">
            @*<button class = "del" style = "position : absolute; top : 10px; right : 20px; color : green">
            <i class="fa-solid fa-x"></i>
            </button>
            <input asp-for = "MainPhoto" hidden/>*@
            <img style = "width : 150px !important" src = "~/assets/images/website-images//@Model.PlantImages.FirstOrDefault(i => i.isMain == true)?.Name"/>
        </div>
    </div>
    <div>
        <p class = "text text-success">Hover Images:</p>
        <div style = "position: relative">
           @* <button class = "del" style = "position : absolute; top : 10px; right : 20px; color : green">
            <i class="fa-solid fa-x"></i>
            </button>
            <input asp-for = "@Model.PlantImages.FirstOrDefault(i => i.isMain == null).Name" hidden/>*@
        <img style = "width : 150px !important" src = "~/assets/images/website-images//@Model.PlantImages.FirstOrDefault(i => i.isMain == null)?.Name"/>
        </div>
    </div>
    <div class = "d-flex">
        <p class = "text text-success">Another Images:</p>
            @foreach (var item in Model.PlantImages.Where(i => i.isMain == false))
            {
                <div style = "position: relative">
                    <button class = "del" style = "position : absolute; top : 15px; right : 25px; color : green">
                    <i class="fa-solid fa-x"></i>
                    </button>
                    <input asp-for = "Photos"  hidden/>
                    <img style = "width : 150px !important" src = "~/assets/images/website-images//@item.Name"/>
                </div>
            }
    </div>

   </div>
    <form class = "mt-3" method = "post" enctype = "multipart/form-data">
        <div>
            <label asp-for = "MainPhoto">Main Image:</label><br />
            <input asp-for = "MainPhoto" class = "form-control" />
            <span class = "text-danger" asp-validation-for = "MainPhoto"></span>
        </div>
        <div>
            <label asp-for = "HoverPhoto">Hover Image:</label><br />
            <input asp-for = "HoverPhoto" class = "form-control" />
            <span class = "text-danger" asp-validation-for = "HoverPhoto"></span>
        </div>
        <div>
            <label asp-for = "Photos">Images:</label><br />
            <input asp-for = "Photos" class = "form-control" />
            <span class = "text-danger" asp-validation-for = "Photos"></span>
        </div>
        <div>
            <label asp-for = "Name">Name:</label><br />
            <input asp-for = "Name" class = "form-control" />
            <span class = "text-danger" asp-validation-for = "Name"></span>
        </div>
        <div>
            <label asp-for = "Price">Price:</label><br />
            <input asp-for = "Price" class = "form-control" />
            <span class = "text-danger" asp-validation-for = "Price"></span>
        </div>
        <div>
            <label asp-for = "SKU">SKU:</label><br />
            <input asp-for = "SKU" class = "form-control" />
            <span class = "text-danger" asp-validation-for = "SKU"></span>
        </div>
        <div>
            <label asp-for = "Desc">Desc:</label><br />
            <input asp-for = "Desc" class = "form-control" />
            <span class = "text-danger" asp-validation-for = "Desc"></span>
        </div>
        <div class = "mt-2">
            <button class = "btn btn-success" type = "submit" style = "color : white">Create</button>
        </div>

    </form>
</div>