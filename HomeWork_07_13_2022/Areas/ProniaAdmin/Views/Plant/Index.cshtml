@model List<Plant>
@{
    ViewData["Title"] = "Index";
}


<div class = "main-panel">
	<div class = "content-wrapper">
		<div class = "row">
			<div class="col-lg-12 grid-margin stretch-card">
				<div class = "card">
					<div class = "card-body">
                        <div>
                            <a asp-area = "ProniaAdmin" asp-controller = "plant" asp-action = "create" class = "btn btn-success" style = "color:white">Create new Plant</a>
                        </div>
						<div class="table-responsive pt-3">
                    <table class="table table-dark">
                      <thead>
                        <tr>
                          <th>
                            Images
                          </th>
                          <th>
                            Name
                          </th>
                          <th>
                            Price
                          </th>
                          <th>
                            SKU
                          </th>
                          <th>
                            Settings
                          </th>
                        </tr>
                      </thead>
                      <tbody>
                        @foreach (Plant plant in Model)
                       {
                           <tr>
                          <td>
                            <img src = "~/assets/images/website-images//@plant.PlantImages.FirstOrDefault(p => p.isMain == true)?.Name">
                          </td>
                          <td>
                            @plant.Name
                          </td>
                          <td>
                            $@plant.Price
                          </td>
                          <td>
                            @plant.SKU
                          </td>
                          <td class = "d-flex">
                            <div>
                                <a class = "btn btn-warning" asp-area = "proniaadmin" asp-controller = "plant" asp-action = "update" asp-route-id = "@plant.Id"><i class = "mdi mdi-border-color"></i></a>
                            </div>
                            <div>
                                <a class = "btn btn-danger" asp-area = "proniaadmin" asp-controller = "plant" asp-action = "delete" asp-route-id = "@plant.Id"><i class = "mdi mdi-delete"></i></a>
                            </div>
                          </td>
                        </tr>
                       }
                      </tbody>
                    </table>
                  </div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>